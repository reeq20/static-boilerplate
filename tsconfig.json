{
  "compilerOptions": {
    "outDir": "./public/",
    "baseUrl": "./",
    "paths": {
      "@core/*": ["./src/js/core/*"],
      "@main/*": ["./src/js/main/*"],
      "@glsl/*": ["./src/js/glsl/*"],
      "@html/*": ["./src/html/*"],
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2015",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
}